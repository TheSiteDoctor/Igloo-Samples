@inherits UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem<ContentModels.DataListBlock, ContentModels.DataListBlockSettings>>

@{
    var settings = Model.Settings;
    var content = Model.Content;

    if (content?.Items is null || content.Items.Any() == false)
    {
        return;
    }
}

<igloo-block-wrap settings="settings" content="content">
    <ul class="divide-y divide-(--palette-border-color)">
        @foreach (var item in content.Items)
        {
            var dataItem = item.Content as DataListItemComponent;
            if (dataItem is null)
            {
                continue;
            }

            <li class="py-2">
                <p class="flex justify-between">
                    <span class="text-left">@dataItem.TextLeft</span>
                    @if (string.IsNullOrWhiteSpace(dataItem.TextRight) == false)
                    {
                        <span class="text-right">@dataItem.TextRight</span>
                    }
                </p>
                @if (string.IsNullOrWhiteSpace(dataItem.AdditionalText) == false)
                {
                    <p class="mt-1 text-sm">@dataItem.AdditionalText</p>
                }
            </li>
        }
    </ul>
</igloo-block-wrap>
